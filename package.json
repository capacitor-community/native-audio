{
  "name": "@capacitor-community/native-audio",
  "version": "5.0.0",
  "description": "A native plugin for native audio engine",
  "main": "dist/plugin.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "files": [
    "android/src/main/",
    "android/build.gradle",
    "dist/",
    "ios/Plugin/",
    "CapacitorCommunityNativeAudio.podspec"
  ],
  "keywords": [
    "capacitor",
    "plugin",
    "audio",
    "media",
    "native"
  ],
  "scripts": {
    "verify": "npm run verify:ios && npm run verify:android && npm run verify:web",
    "verify:ios": "cd ios && pod install && xcodebuild -workspace Plugin.xcworkspace -scheme Plugin -destination generic/platform=iOS && cd ..",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "verify:web": "npm run build",
    "lint": "npm run eslint && npm run prettier -- --check && npm run swiftlint -- lint",
    "fmt": "npm run eslint -- --fix && npm run prettier -- --write && npm run swiftlint -- autocorrect --format",
    "eslint": "eslint . --ext ts",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\"",
    "swiftlint": "node-swiftlint",
    "docgen": "docgen --api NativeAudio --output-readme README.md --output-json dist/docs.json",
    "build": "npm run clean && npm run docgen && tsc && rollup -c rollup.config.js",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build",
    "prepare": "husky install"
  },
  "author": "bazuka5801 <bazuka5801@mail.ru> & Priyank Patel <priyank.patel@stackspace.ca>",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@capacitor/android": "^5.0.0",
    "@capacitor/ios": "^5.0.0",
    "@capacitor/cli": "^5.0.0",
    "@capacitor/core": "^5.0.0",
    "@capacitor/docgen": "0.2.1",
    "@ionic/eslint-config": "^0.3.0",
    "@ionic/prettier-config": "~3.0.0",
    "@ionic/swiftlint-config": "^1.1.2",
    "eslint": "^8.43.0",
    "prettier": "~2.8.8",
    "prettier-plugin-java": "~2.1.0",
    "rimraf": "^5.0.1",
    "rollup": "^2.79.1",
    "swiftlint": "^1.0.2",
    "typescript": "~4.8.4",
    "husky": "^8.0.3"
  },
  "peerDependencies": {
    "@capacitor/core": "^5.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  },
  "prettier": "@ionic/prettier-config",
  "swiftlint": "@ionic/swiftlint-config",
  "eslintConfig": {
    "extends": "@ionic/eslint-config/recommended"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/capacitor-community/native-audio"
  },
  "bugs": {
    "url": "https://github.com/capacitor-community/native-audio/issues"
  },
  "publishConfig": {
    "access": "public"
  }
}
